<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lab4.HelloController"
          alignment="CENTER" hgap="15" vgap="15"
          style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 2;">

    <Label text="X:" GridPane.rowIndex="0" GridPane.columnIndex="0"
           style="-fx-font-size: 16px; -fx-text-fill: #495057;"/>
    <TextField fx:id="xField" GridPane.rowIndex="0" GridPane.columnIndex="1"
               style="-fx-font-size: 14px; -fx-text-fill: #212529; -fx-padding: 5; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-background-color: #ffffff; -fx-border-radius: 5;"/>

    <Label text="Y:" GridPane.rowIndex="1" GridPane.columnIndex="0"
           style="-fx-font-size: 16px; -fx-text-fill: #495057;"/>
    <TextField fx:id="yField" GridPane.rowIndex="1" GridPane.columnIndex="1"
               style="-fx-font-size: 14px; -fx-text-fill: #212529; -fx-padding: 5; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-background-color: #ffffff; -fx-border-radius: 5;"/>

    <Button text="Find Quadrant" fx:id="calculateButton" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
            style="-fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-background-color: #007bff; -fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-width: 0;"
            />

    <Label fx:id="resultLabel" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 14px; -fx-text-fill: #495057; -fx-padding: 5;"/>

    <Canvas fx:id="canvas" width="400" height="400" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"
            style="-fx-border-color: #ced4da; -fx-border-width: 1; -fx-background-color: #ffffff;"/>
</GridPane>
